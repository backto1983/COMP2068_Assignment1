<% include partials/header %>
<!--Projects-->
<main>
  <div class="section" id="projects">
    <div class="container">
      <h3 class="header text_b center" style="color: #272746">My Projects</h3>
      <div class="row">
        <!--First Card-->
        <div class="col s12 m12 l4">
          <div class="card hoverable grey darken-3">
            <div class="card-image">
              <!--Image showcasing project; other cards also include pictures-->
              <img class="activator" src="/images/bookstore.jpg">
            </div>
            <div class="card-content">
              <span class="card-title activator center"><%= projectTitle1 %></span>
              <!--Link to project website; other cards also include links-->
              <p class="center"><a class="purple-text text-lighten-5" href="https://assignment2-bookstore.azurewebsites.net">Project link</a></p>
            </div>
            <!--After title is clicked, another card is revealed with more information-->
            <div class="card-reveal grey darken-3">
              <span class="card-title center"><%= projectTitle1 %></span>
              <p style="text-align: justify"><%= project1 %></p>
            </div>
          </div>
        </div>
        <!--Second Card-->
        <div class="col s12 m12 l4">
          <div class="card hoverable grey darken-3">
            <div class="card-image">
              <img class="activator" src="/images/javaCode.jpg">
            </div>
            <div class="card-content">
              <span class="card-title activator center"><%= projectTitle2 %></span>
              <p class="center"><a class="purple-text text-lighten-5" href="https://www.youtube.com/watch?v=NSEX1b3Phws">Project link</a></p>
            </div>
            <div class="card-reveal grey darken-3">
              <span class="card-title center"><%= projectTitle2 %></i></span>
              <p style="text-align: justify"><%= project2 %></p>
            </div>
          </div>
        </div> 
        <!--Third Card-->
        <div class="col s12 m12 l4">
          <div class="card hoverable grey darken-3">
            <div class="card-image">
              <img class="activator" src="/images/SDLC.png">
            </div>
            <div class="card-content">
              <span class="card-title activator center"><%= projectTitle3 %></span>
              <p class="center"><a class="purple-text text-lighten-5" href="https://docs.google.com/document/d/1RJQVJAKYf65rllWMH96L2Ub_O5T0j9ItVg3IQpps948/edit?usp=sharing">Project link</a></p>
            </div>
            <div class="card-reveal grey darken-3">
              <span class="card-title center"><%= projectTitle3 %></i></span>
              <p style="text-align: justify"><%= project3 %></p>
            </div>
          </div>
        </div>             
      </div>
    </div>
  </div>
</main>
